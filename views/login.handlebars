{{! LOGIN FORM}}

<div class="form">
  <h3 class="form-header">Login</h3>
  
  <form class="login-form">
    <div>
      <label class="form-label" for="email-login">Email:</label>
      <input class="form-input" type="text" id="email-login" />
    </div>
    <div>
      <label class="form-label" for="password-login">Password:</label>
      <input class="form-input" type="password" id="password-login" />
    </div>
    <div>
      <button type="submit" class="button">LOGIN</button>
    </div>
    <a class="login-link" href="/signup">Sign up instead</a>
  </form>
</div>


<script src="/javascript/login.js"></script>