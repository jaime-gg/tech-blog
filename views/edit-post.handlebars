<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <label for="post-title" class="form-label">Title</label>
    <input name="post-title" type="text" value="{{post.title}}" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <input name="post-body" type="text" value="{{post.body}}" class="form-input" />


    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>