<section class="post">
  <h2 class="post-header">Create New Post</h2>

  <form class="new-post-form post-body">
    <div>
      <label class ="form-label" for="post-title">Title</label>
      <input class="form-input title-input" type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label class ="form-label" for="post-body">Content</label>
      <input class="form-input" id="post-body" name="post-body" />
    </div>
    <button type="submit" class="button">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-data post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/new-post.js"></script>